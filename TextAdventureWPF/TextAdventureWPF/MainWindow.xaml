<Window x:Class="TextAdventureWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Adventure" Height="720" Width="1280">
    <Grid Background="Black">
        <Image x:Name="MainImage" Margin="260,10,260,238" Source="/Images/wp1933949.png" Stretch="Fill" StretchDirection="Both"/>
        <ListBox x:Name="StoryList" Margin="260,470,260,0" Background="#FFD1D1D1"/>
        <ListBox x:Name="InventoryList" Margin="10,470,1035,0" Background="#FFD1D1D1"/>
        <Button x:Name="ForwardButton" Content="Forward" CommandParameter="0" HorizontalAlignment="Left" Margin="1085,470,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="MoveButtonCall"/>
        <Button x:Name="BackButton" Content="Back" CommandParameter="1" HorizontalAlignment="Left" Margin="1085,560,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="MoveButtonCall"/>
        <Button x:Name="LeftButton" Content="Left" CommandParameter="2" HorizontalAlignment="Left" Margin="1030,515,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="MoveButtonCall"/>
        <Button x:Name="RightButton" Content="Right" CommandParameter="3" HorizontalAlignment="Left" Margin="1135,515,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="MoveButtonCall"/>
        <Button x:Name="UseButton" Content="Use" HorizontalAlignment="Left" Margin="1030,610,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="UseButtonCall"/>
        <Button x:Name="PickUpButton" Content="Pick Up" HorizontalAlignment="Left" Margin="1135,610,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="PickUpButtonCall"/>
    </Grid>
</Window>
